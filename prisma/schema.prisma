generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
  posts Post[]
}

model Post {
  id        Int     @id @default(autoincrement())
  title     String
  content   String?
  published Boolean @default(false)
  authorId  Int
  author    User    @relation(fields: [authorId], references: [id])
}

model BlogCategory {
  id    Int    @id @default(autoincrement())
  name  String
  posts BlogPost[]
}


model BlogPost {
  id Int @id @default(autoincrement())
  title String
  slug String @unique
  content String @db.Text
  categories BlogCategory[]
  published Boolean @default(false)
  createdAt DateTime @default(now())
}

model Shop {
  id Int @id @default(autoincrement())
  name String
  content String
}
